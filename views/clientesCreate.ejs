<div class="container mt-4" >
    <div class="card border-secondary">
        <div class="card-header bg-dark text-light">Ingresar nuevo cliente</div>
        <div class="card-body">
            <form action="/saveCliente" method="POST">
                <div class="mb-3">
                    
                    <label for="user" class="form-label">Nombre</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                </div>

                <div class="mb-3">
                    
                    <label for="user" class="form-label">Email</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="email" name="email" tabindex="1">
                </div>

                <div class="mb-3">
                    
                    <label for="user" class="form-label">Usuario</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="usuario" name="usuario" tabindex="1">
                </div>

                <div class="mb-3">
                    
                    <label for="user" class="form-label">Password</label>
                    <label for="usuario" class="form-label"></label>
