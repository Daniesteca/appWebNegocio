<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/style.css" rel="stylesheet" >
    <!--Usamos boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Editar productos</title>
</head>
  <body>

 <% if (user) { %>
 <div class="container mt-4" >
    <div class="card border-secondary">
        <div class="card-header bg-dark text-light">Editar Producto</div>
        <div class="card-body">
            <form action="/updateProducto" method="POST">
                <input id="id" name="id" value="<%=user.id %>" hidden>
                <div class="mb-3">    
                    <label for="user" class="form-label">Nombre</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<%=user.nombre %>" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Cantidad</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="cantidad" name="cantidad" value="<%=user.cantidad %>" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Valor</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="valor" name="valor" value="<%=user.valor %>" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">id_usuario</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="id_usuario" name="id_usuario" value="<%=user.id_usuario %>" tabindex="1">
                </div>

                <button type="submit" class="btn btn-barb-color2" tabindex="5">Guardar</button>
                <a href="/productos" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
 </div>
<% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  
</body>
</html>