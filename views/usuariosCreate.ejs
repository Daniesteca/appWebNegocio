<div class="container mt-4" >
    <div class="card border-secondary">
        <div class="card-header bg-dark text-light">Ingresar nuevo usuario</div>
        <div class="card-body">
            <form action="/register" method="POST">  <!-- de la auten -->
                <div class="mb-3">
                    <label for="user" class="form-label">Nombre</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Email</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="email" name="email" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Usuario</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="usuario" name="usuario" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Password</label>
                    <label for="usuario" class="form-label"></label>
                    <input type="text" class="form-control" id="password" name="password" tabindex="1">
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Rol</label>
                    <select id="rol" name="rol" class="form-select" tabindex="2">
                        <option value="administrador" selected>Administrador</option>
                        <option value="barbero">Barbero</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="user" class="form-label">Sede</label>
                    <select id="sede" name="sede" class="form-select" tabindex="2">
                        <option value="la_estrella" selected>La estrella</option>
                        <option value="la_enea">La enea</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-barb-color2" tabindex="5">Guardar</button>
                <a href="/usuarios" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>

    </div>
 </div>